(defvar keybinds-items "[]")

(defwindow keybinds_overlay
  :monitor 0
  :geometry (geometry :x "0" :y "0" :width "100%" :height "100%")
  :stacking "fg"
  :focusable false
  :anchor "top left"
  :exclusive false
  :visible keybinds-visible
  (keybinds))
  

(defwidget keybinds []
  (box :orientation "vertical" :class "overlay" :space-evenly false
    (label :text "Hyprland Keybinds" :class "title" :halign "center")
    (scroll :vscroll true :class "bindings" :vexpand true
     (box :orientation "vertical" :halign "fill" :class "inner-box"
  (for item in keybinds-items
    (box :orientation "vertical"
      ;; group title
      (label :text "${item.text}" :class "group-title"
             :visible "${item.is_title}")
      ;; keybind row
      (box :orientation "horizontal" :class "entry" :space-evenly false
           :visible "${item.key}"          ; rows have .key, titles donâ€™t
        (label :text "${item.key}"  :class "key"   :halign "start")
        (label :text "${item.desc}" :class "desc"  :halign "start"))))))))